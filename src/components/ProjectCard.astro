---
const { title, subtitle, link, description, achievements, technologies } =
  Astro.props;
---

<div class="flex flex-col space-y-8 p-8">
  <div class="flex flex-col gap-2">
    <div class="flex items-center justify-between group">
      <h2 class="font-bold text-3xl group-hover:text-emerald-500">{title}</h2>

      <a
        class="group-hover:text-emerald-500 hover:cursor-pointer"
        href={link}
        target="_blank"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          ><path
            fill="none"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 3h6v6m-11 5L21 3m-3 10v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"
          ></path>
        </svg>
      </a>
    </div>
    <span class="text-zinc-400">
      {subtitle}
    </span>
  </div>

  <p class="text-white">
    {description}
  </p>

  <div>
    <h3 class="font-medium">Achievements</h3>
    <ul class="list-inside">
      {
        achievements.map((a: string) => (
          <li class="list-disc text-zinc-400">{a}</li>
        ))
      }
    </ul>
  </div>

  <div>
    <h3 class="font-medium">Technologies</h3>
    <div class="flex flex-wrap gap-2">
      {
        technologies.map((t: string) => (
          <span class="px-2 py-1 text-sm text-gray-300 bg-gray-800/50 rounded">
            {t}
          </span>
        ))
      }
    </div>
  </div>
</div>
